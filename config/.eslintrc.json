{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true // Enable JSX syntax
        }
    },
    "plugins": [
        "@typescript-eslint",
        "react"
    ],
    "rules": {
        // "semi": ["error", "always"], // Semicolon checker
        // "indent": ["error", 4], // Indent space of 4
        // "no-unused-vars": "warn" // Warn on unused variables
    },
    "settings": {
        "react": {
            "version": "detect" // Automatically detect the React version
        }
    }
}